#include "Wire.h"       
#include "I2Cdev.h"     
#include "MPU6050.h"    
#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

MPU6050 mpu;
int16_t ax, ay, az;
int16_t gx, gy, gz;


RF24 radio(7, 8); // SPI통신을 위한 (CE, CSN) 핀 선언
const byte address[6] = "00001"; // 송신기와 수신기가 동일한 값으로 주소 설정함(5자리)

struct MyData {
  byte X;
  byte Y;
  byte Z;
};

MyData data;
void setup()
{
  Serial.begin(9600);
  Wire.begin();
  mpu.initialize();
   radio.begin();
  radio.openWritingPipe(address); 
  radio.setPALevel(RF24_PA_MIN); 
  radio.stopListening();
}

void loop()
{
  String text;
  char textc[32];
  mpu.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);
  data.X = map(ax, -17000, 17000, 0, 255 ); 
  data.Y = map(ay, -17000, 17000, 0, 255); 
  data.Z = map(az, -17000, 17000, 0, 255);  
  delay(500);
  Serial.print("Axis X = ");
  Serial.print(data.X);
  Serial.print("  ");
  Serial.print("Axis Y = ");
  Serial.print(data.Y);
  Serial.print("  ");
  Serial.print("Axis Z  = ");
  Serial.println(data.Z);
 
  if(data.X <= 40)
  {
    text = "w"; 
  }
  else if(data.X >= 220)
  {
     text = "s"; 
  }
  else if(data.Y <= 40)
  {
     text = "a"; 
  }
  else if(data.Y >= 220)
  {
     text = "d"; 
  }
   text.toCharArray(textc,32);
  radio.write(&textc, sizeof(textc));
  
}
